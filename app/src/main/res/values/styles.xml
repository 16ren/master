<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialStyle" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="MaterialStyle.ActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
   <style name="MaterialStyle.NoActionBar.Translucence" parent="Theme.AppCompat.Light.Dialog">
       <item name="colorPrimary">@color/primary</item>
       <item name="colorPrimaryDark">@color/primary_dark</item>
       <item name="colorAccent">@color/accent</item>
       <item name="android:textColorPrimary">@color/primary_text</item>
       <item name="android:textColor">@color/secondary_text</item>
       <item name="android:background">#FFFFFF00</item>
   </style>
</resources>
